<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wella.front.mapper.FrontBankOrderMapper">
	<!-- select -->
	<!-- 获得未充值信息的函数 -->
	<select id = "getCzMoneyInfo" parameterType = "java.util.Map" resultType = "java.util.Map">
		SELECT IFNULL(SUM(zf_money), 0.00) zfMoney 
		FROM wa_bank_order
		<where> 
			<if test = "userId != null">
				AND user_id = #{userId}
			</if>
			<if test = "zfState != null">
				AND zf_state = #{zfState}
			</if>
		</where>
	</select>
	
	<!-- 获得充值目录的函数 -->
	<select id = "getCzList" parameterType = "java.util.Map" resultType = "java.util.Map">
		SELECT * 
		FROM wa_bank_order 
		<where>
			<if test = "userId != null">
				AND user_id = #{userId}
			</if>
			<if test = "zfState != null">
				AND zf_state = #{zfState}
			</if>
		</where>
		ORDER BY order_id DESC
		LIMIT ${start}, ${size}
	</select>	
	<!-- 获得充值目录个数的函数 -->
	<select id = "getCzListCount" parameterType = "java.util.Map" resultType = "int">
		SELECT COUNT(*) 
		FROM wa_bank_order 
		<where>
			<if test = "userId != null">
				AND user_id = #{userId}
			</if>
			<if test = "zfState != null">
				AND zf_state = #{zfState}
			</if>
		</where>
	</select>
</mapper>