<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wella.houtai.sys.mapper.MenuMapper">
  <!-- wa_menu表 -->
  	<!-- select -->
	<select id = "getMenuList" parameterType="java.util.Map" resultType = "java.util.Map">
	   SELECT * FROM wa_menu <if test = "where!=null">${where} </if> <if test = "like!=null">${like} </if> order by parent_id, order_num <if test = "pageNum!=null">${pageNum} </if>
	</select>
	<select id = "getTotalMenuList" parameterType="java.util.Map" resultType = "java.util.Map">
	   SELECT * FROM wa_menu where 1 
	</select>
	<select id = "getMenuListCount" parameterType="java.util.Map" resultType = "int">
	   SELECT count(*) cn FROM wa_menu <if test = "where!=null">${where} </if> 
	</select>
	<insert id = "addNewMenu" parameterType="java.util.Map">
	    insert into wa_menu set title=#{menu_name}, url=#{menu_addr}, parent_id= #{parent_id},order_num =#{menu_order}, class_name = #{menu_icon}
	    <selectKey keyProperty="returnIdx" resultType="String">
		    select last_insert_id()
		</selectKey> 
	</insert >
	<delete id = "deleteMenu" parameterType="java.util.Map">
	   delete from wa_menu where menu_id = #{menu_id} or parent_id=#{menu_id}  
	</delete>
	<select id = "getMenuInfo" parameterType="java.util.Map" resultType = "java.util.Map">
	   select * from  wa_menu where menu_id = #{menu_id}
	</select>  
	<update id = "updateMenuInfo" parameterType="java.util.Map">
	    update wa_menu set title=#{menu_name}, url=#{menu_addr}, order_num =#{menu_order}, class_name = #{menu_icon}, is_show=#{is_show} where menu_id=#{menuIndex}
	</update >
	
	<!-- select -->  
	
	
	<!-- wa_menu_role表 -->
  	<!-- select -->
	<select id = "getRoleList" parameterType="java.util.Map" resultType = "java.util.Map">
	   SELECT * FROM wa_user_role <if test = "where!=null">${where}</if> order by order_id ${pageNum}
	</select>
	<select id = "getRoleInfo" parameterType="java.util.Map" resultType = "java.util.Map">
	   SELECT * FROM wa_user_role where role_id=#{id}
	</select>
	<select id = "getRoleCount" parameterType="java.util.Map" resultType = "java.util.Map">
	   SELECT count(*)	cn FROM wa_user_role where 1
	</select>	
	
	<!-- select -->  
	
	
	
	
	 
</mapper>