<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wella.houtai.sys.mapper.RoleMapper">
	<!-- wa_user_roleè¡¨ -->
  	<!-- select -->
	<select id = "getRoleList" parameterType="java.util.Map" resultType = "java.util.Map">
	   SELECT * FROM wa_user_role <if test = "where!=null">${where}</if> order by order_num <if test = "pageNum!=null">${pageNum} </if>
	</select>
	
	<select id = "getRoleListCount" parameterType="java.util.Map" resultType = "int">
	   SELECT count(*) cn FROM wa_user_role <if test = "where!=null">${where} </if> 
	</select> 
</mapper>